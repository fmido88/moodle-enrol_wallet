<ul class="nav nav-tabs" role="tablist">
    {{#pages}}
    <li class="nav-item" data-key="{{key}}">
        <a class="nav-link" href="#link{{key}}" title="{{name}}" role="tab" data-toggle="tab" data-bs-toggle="tab" data-text="{{name}}">{{name}}</a>
    </li>
    {{/pages}}
</ul>
<div class="tab-content mt-3">
    {{#pages}}
    <div class="tab-pane" id="link{{key}}" role="tabpanel">
        {{#prerendered}}
            {{{content}}}
        {{/prerendered}}
        {{^prerendered}}
            {{#isadmin}}
                {{#context}}
                {{> enrol_wallet/admin-tabs }}
                {{/context}}
            {{/isadmin}}
            {{#isbalance}}
                {{#context}}
                {{> enrol_wallet/display }}
                {{/context}}
            {{/isbalance}}
            {{#istopup}}
                {{#context}}
                {{> enrol_wallet/topup_options }}
                {{/context}}
            {{/istopup}}
        {{/prerendered}}
    </div>
    {{/pages}}
</div>
