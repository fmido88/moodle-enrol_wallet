{{!
    @template enrol_wallet/discount-line

    Example context (json):
    {
        "data": [
            {
                "heading": "Site",
                "catid": "0",
                "discounts": [
                    {
                        "discount": "15%",
                        "condition": "> 150 EGP",
                        "percent": "12",
                        "color": "135"
                    },
                    {
                        "discount": "20%",
                        "condition": "> 250 EGP",
                        "percent": "18",
                        "color": "200"
                    }
                ]
            }
        ]
    }
}}
<div class="enrol-wallet-discounts-container">
    {{# data}}
        <hr>
        <div class="discount-cat-container" data-catid="{{catid}}">
            <h4>{{heading}}</h4>
            <div class="discount-line">
            {{# discounts}}
                <div class="rule-container" style="width:{{percent}}%;{{!
                                                    }}border-bottom-color: rgb({{color}} {{color}} 255);">
                    <h5 class="discount-percent">{{discount}}</h5>
                    <p class="condition">
                        {{condition}}
                    </p>
                </div>
            {{/ discounts}}
            </div>
        </div>
    {{/ data}}
</div>