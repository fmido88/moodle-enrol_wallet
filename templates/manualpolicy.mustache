{{!
    @template enrol_wallet/manualpolicy

    This template will render information about manual refund policy.

    Context variables required for this template:
    * policy - the refund policy.

    Example context (json):
    {
        "policy": "something",
        "id": "1234"
    }

}}
{{# policy}}
<div data-wallet-purpose="policy-container">
    <div class="pb-1">
        <a href="#" class="transactions-policy-url" data-wallet-action="toggle-policy"> {{# str }} refundpolicy, enrol_wallet {{/ str }}</a>
    </div>
    <div data-wallet-role="policy" class="transactions-policy text-left" style="display:none;">{{{policy}}}</div>
</div>
{{/ policy}}

{{#js}}
{{#policy}}
    require(['enrol_wallet/expenders'], function(ex) {
        ex.init('{{uniqid}}');
    });
{{/policy}}
{{/js}}
